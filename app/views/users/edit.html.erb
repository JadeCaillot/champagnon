<html>
  <head>
    <title>Eventbrite THP</title>
  </head>

  <body>
      <h2 class="display-4 text-center">Modifier les informations du profil</h2>


    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
            <br><br><br>
                <%= form_for @user do |f|%>
                    <div class="form-group">
                        <label> 'Prénom' </label>
                        <%= f.text_field :first_name, :class=>'form-control' %>
                    </div>
                    <br />
                    <div class="form-group">
                        <%= label_tag 'Nom' %>
                        <%= f.text_field :last_name, :class=>'form-control' %>
                    <br />     
                    </div>
                    <div class="form-group">
                        <%= label_tag 'Description' %>
                        <%= f.text_field :description, :class=>'form-control' %>
                    <br /> 
                    </div>  

                    <div class="actions mt-5">
                    <%= f.submit 'Mettre à jour', :class=>'btn btn-secondary btn-block'%>
                <% end %>
            </div>
        </div>
    </div>
  </body>
</html>
