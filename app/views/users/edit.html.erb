<h2 class="display-4 text-center">Modifier les informations du profil</h2>

<div class="container">
  <div class="col-md-6 offset-md-3">
    <br /><br /><br />
    <%= form_for @user do |f|%>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-4">
          <% if @user.avatar.attached? %> 
            <%= image_tag @user.avatar, size: '120', alt:"avatar"%> 
          <% else %>
            <i class="fas fa-user fa-7 border"></i>
          <%end%>
        </div>
        <div class="col-sm-4"> 
          <%= label_tag 'Photo de profil' %> 
          <%=f.file_field :avatar, class:'form-control' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag 'Prénom' %>
      <%= f.text_field :first_name, class:'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag 'Nom' %> 
      <%= f.text_field :last_name, class:'form-control'%>
    </div>
    <div class="form-group">
      <%= label_tag 'Description' %> 
      <%= f.text_field :description, class:'form-control' %>
    </div>
  </div>

  <div class="actions mt-5 text-center">
    <%= f.submit 'Mettre à jour', class:'btn btn-secondary'%> <% end
    %>
  </div>
</div>
